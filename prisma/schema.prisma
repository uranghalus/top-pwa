generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ROLE {
  HRD
  USER
  SPV
}

enum STATUS {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  hash         String
  salt         String
  role         ROLE     @default(USER)
  profileImage String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
}
